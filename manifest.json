  "launch_handler": {
    "client_mode": "navigate-existing"
  },

  "edge_side_panel": {
    "preferred_width": 400
  },

  "share_target": {
    "action": "/share-target.html",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "text/plain", "application/pdf"]
        }
      ]
    }
  },

  "file_handlers": [
    {
      "action": "/file-handler.html",
      "accept": {
        "text/*": [".txt", ".md"],
        "application/pdf": [".pdf"]
      },
      "icons": [
        {
          "src": "./icons/icon-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],

  "protocol_handlers": [
    {
      "protocol": "web+elsa",
      "url": "/protocol-handler.html?url=%s"
    }
  ],

  "note_taking": {
    "new_note_url": "/notes/new.html"
  },

  "widgets": [
    {
      "name": "Progress Belajar",
      "tag": "progress",
      "template": "https://widget-templates.com/generic",
      "ms_ac_template": "https://widget-templates.com/adaptive-card",
      "data": "widgets/progress.json",
      "icons": [
        {
          "src": "./icons/widget-icon.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ]
